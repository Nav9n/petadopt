pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                // Check out the code from Git repository
                git branch: 'master', url: 'https://github.com/Nav9n/petadopt.git'
            }
        }
        
        stage('Build') {
            steps {
                // Set the path to the Maven wrapper script
                def mvnWrapper = "./mvnw"
                
                // Build the project using the Maven wrapper
                sh "${mvnWrapper} clean install"
            }
        }
        
        // Add more stages as needed (e.g., testing, deployment, etc.)
    }
    
    post {
        always {
            // Archive the build artifacts or perform any cleanup tasks
            archiveArtifacts artifacts: '**/target/*.jar', allowEmptyArchive: true
        }
    }
}
